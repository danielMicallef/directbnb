---
interface Props {
  imageSrc: string;
  title: string;
  subtitle?: string;
  height?: string;
}

const { imageSrc, title, subtitle, height = 'h-screen' } = Astro.props;
---

<div class={`hero ${height}`} style={`background-image: url(${imageSrc})`}>
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-2xl">
      <h1 class="mb-5 text-5xl font-bold text-white drop-shadow-lg">{title}</h1>
      {subtitle && <p class="mb-5 text-xl text-white drop-shadow-md">{subtitle}</p>}
      <div class="flex gap-4 justify-center flex-wrap">
        <slot name="actions" />
      </div>
    </div>
  </div>
</div>
