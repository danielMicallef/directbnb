---
import Layout from '../../layouts/Layout.astro';
import ArticleCard from '../../components/ArticleCard.astro';

// TODO: Replace with actual API call or JSON import
const articles = [
  {
    title: "Top 10 Hiking Trails Near Mountain Retreat",
    subtitle: "Discover the best trails for all skill levels",
    slug: "top-hiking-trails",
    readTime: 8,
    tags: ["hiking", "outdoors", "adventure"],
    featuredImage: "https://images.unsplash.com/photo-1551632811-561732d1e306?w=600"
  },
  {
    title: "Winter Activities Guide",
    subtitle: "Make the most of your winter getaway",
    slug: "winter-activities",
    readTime: 6,
    tags: ["winter", "skiing", "family"],
    featuredImage: "https://images.unsplash.com/photo-1551698618-1dfe5d97d256?w=600"
  },
  {
    title: "Local Restaurant Recommendations",
    subtitle: "The best dining experiences in the area",
    slug: "local-restaurants",
    readTime: 5,
    tags: ["food", "dining", "local"],
    featuredImage: "https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=600"
  },
];
---

<Layout title="Articles & Guides - Mountain Retreat">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold text-center mb-4">Articles & Guides</h1>
    <p class="text-center text-lg mb-12 opacity-75">Discover tips, guides, and local insights for your perfect stay</p>

    <!-- Articles Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {articles.map(article => (
        <ArticleCard {...article} />
      ))}
    </div>

    <!-- No articles message (if empty) -->
    {articles.length === 0 && (
      <div class="text-center py-16">
        <p class="text-2xl opacity-50">No articles yet. Check back soon!</p>
      </div>
    )}
  </div>
</Layout>
